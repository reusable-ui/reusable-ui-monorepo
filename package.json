{
  "name": "reusable-ui-monorepo",
  "version": "6.5.0",
  "private": true,
  "scripts": {
    "compile+test": "lerna run tsc && lerna run test",
    "update-deps": "ncu --root --workspaces --peer",
    "update-deps-u": "ncu --root --workspaces --peer -u",
    "build": "npx lerna run tsc",
    "publish": "npm run build && npx lerna publish from-package"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.0",
    "cross-env": "^7.0.3",
    "jest": "^29.5.0",
    "lerna": "^6.6.2",
    "ts-jest": "^29.1.0",
    "typescript": "^5.5.4"
  },
  "type": "module",
  "workspaces": [
    "configs/colors",
    "tests/test-colors",
    "configs/borders",
    "tests/test-borders",
    "configs/spacers",
    "tests/test-spacers",
    "configs/breakpoints",
    "__configs/*",
    "__utilities/*",
    "__features/*",
    "__capabilities/*",
    "__variants/*",
    "__states/*",
    "__base-components/*",
    "__base-content-components/*",
    "__simple-components/*",
    "__layout-components/*",
    "__status-components/*",
    "__notification-components/*",
    "__menu-components/*",
    "__dialog-components/*",
    "__composite-components/*",
    "__utility-components/*",
    "__barrels/*",
    "__tests/*"
  ]
}
